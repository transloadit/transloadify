{
  "name": "transloadify",
  "version": "1.0.0",
  "description": "CLI client for transloadit",
  "packageManager": "yarn@4.12.0",
  "engines": {
    "node": ">= 16",
    "yarn": "3.6.0"
  },
  "scripts": {
    "fix:js": "biome check --write .",
    "lint:js": "biome check .",
    "lint:ts": "tsc --noEmit",
    "mocha": "vitest run",
    "postinstall": "install-completion bash _transloadify",
    "release:major": "env SEMANTIC=major npm run release",
    "release:minor": "env SEMANTIC=minor npm run release",
    "release:patch": "env SEMANTIC=patch npm run release",
    "release": "npm version ${SEMANTIC:-patch} -m \"Release %s\" && git push && git push --tags && npm publish",
    "start": "npm run web:start",
    "test": "vitest run",
    "check": "npm-run-all lint:ts fix:js test"
  },
  "author": "Adrian Sinclair <adrian@transloadit.com>",
  "license": "MIT",
  "type": "module",
  "bin": "./bin/cmd.js",
  "main": "./src/index.js",
  "files": ["src", "bin", "_transloadify"],
  "dependencies": {
    "node-watch": "^0.4.1",
    "q": "1.4.1",
    "recursive-readdir": "2.1.0",
    "shell-completion": "0.0.5",
    "transloadit": "latest"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "chai": "latest",
    "dotenv": "^17.2.3",
    "fakefile": "^0.0.8",
    "image-size": "0.5.0",
    "npm-run-all": "^4.1.5",
    "request": "2.79.0",
    "rimraf": "2.5.4",
    "true": "^0.0.4",
    "vitest": "^4.0.14"
  }
}
