{
  "name": "transloadify",
  "version": "1.0.0",
  "description": "CLI client for transloadit",
  "packageManager": "yarn@4.12.0",
  "engines": {
    "node": ">= 22"
  },
  "scripts": {
    "fix:js": "biome check --write .",
    "lint": "npm-run-all 'lint:*'",
    "lint:js": "biome check .",
    "lint:ts": "tsc --noEmit",
    "mocha": "vitest run",
    "postinstall": "install-completion bash _transloadify",
    "release:major": "env SEMANTIC=major npm run release",
    "release:minor": "env SEMANTIC=minor npm run release",
    "release:patch": "env SEMANTIC=patch npm run release",
    "release": "npm version ${SEMANTIC:-patch} -m \"Release %s\" && git push && git push --tags && npm publish",
    "start": "npm run web:start",
    "test": "npm-run-all test:unit test:e2e",
    "test:unit": "vitest run --coverage --coverage.reportsDirectory=coverage/unit test/unit",
    "test:e2e": "vitest run --coverage --coverage.reportsDirectory=coverage/e2e test/e2e",
    "check": "npm-run-all lint:ts fix:js test:unit"
  },
  "author": "Adrian Sinclair <adrian@transloadit.com>",
  "license": "MIT",
  "type": "module",
  "bin": "./bin/cmd.ts",
  "main": "./src/index.ts",
  "files": [
    "src",
    "bin",
    "_transloadify"
  ],
  "dependencies": {
    "clipanion": "^4.0.0-rc.4",
    "node-watch": "^0.7.4",
    "recursive-readdir": "2.2.3",
    "shell-completion": "0.0.5",
    "transloadit": "^4.0.7",
    "tsx": "^4.21.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^24.10.1",
    "@types/recursive-readdir": "^2.2.4",
    "@vitest/coverage-v8": "^4.0.14",
    "dotenv": "^17.2.3",
    "image-size": "2.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "6.1.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
