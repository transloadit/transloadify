{
  "name": "transloadify",
  "version": "1.0.0",
  "description": "CLI client for transloadit",
  "packageManager": "yarn@4.12.0",
  "engines": {
    "node": ">= 22"
  },
  "scripts": {
    "fix:js": "biome check --write .",
    "lint": "npm-run-all 'lint:*'",
    "lint:js": "biome check .",
    "lint:ts": "tsc --noEmit",
    "mocha": "vitest run",
    "postinstall": "install-completion bash _transloadify",
    "release:major": "env SEMANTIC=major npm run release",
    "release:minor": "env SEMANTIC=minor npm run release",
    "release:patch": "env SEMANTIC=patch npm run release",
    "release": "npm version ${SEMANTIC:-patch} -m \"Release %s\" && git push && git push --tags && npm publish",
    "start": "npm run web:start",
    "test": "npm-run-all test:unit test:e2e",
    "test:unit": "vitest run --coverage --coverage.reportsDirectory=coverage/unit --exclude test/end-to-end.js",
    "test:e2e": "vitest run --coverage --coverage.reportsDirectory=coverage/e2e test/end-to-end.js",
    "check": "npm-run-all lint:ts fix:js test:unit"
  },
  "author": "Adrian Sinclair <adrian@transloadit.com>",
  "license": "MIT",
  "type": "module",
  "bin": "./bin/cmd.js",
  "main": "./src/index.js",
  "files": [
    "src",
    "bin",
    "_transloadify"
  ],
  "dependencies": {
    "node-watch": "^0.4.1",
    "q": "1.4.1",
    "recursive-readdir": "2.1.0",
    "shell-completion": "0.0.5",
    "transloadit": "latest"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^24.10.1",
    "@types/q": "^1.5.8",
    "@vitest/coverage-v8": "^4.0.14",
    "dotenv": "^17.2.3",
    "fakefile": "^0.0.8",
    "image-size": "0.5.0",
    "npm-run-all": "^4.1.5",
    "request": "2.79.0",
    "rimraf": "2.5.4",
    "true": "^0.0.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
